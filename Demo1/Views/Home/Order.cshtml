
@{
    ViewData["Title"] = "Order";
}

@model OrderViewModel

<h1>Order Detail : </h1>

<h6>@Model.Name</h6>
<table class="table table-hover">
    <tr>
        <th>ProductName</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
    </tr>
    @foreach (var item in Model.Lines)
    {
        int total = item.Price * item.Qunaity;
        <tr>
            <td>@item.ProductName</td>

            <td>@item.Qunaity</td>
            <td>@item.Price</td>
            <td>@total</td>

        </tr>
    }



</table> 
